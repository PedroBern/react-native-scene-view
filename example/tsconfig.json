{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "react-native-scene-view": ["../src/index"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": ["node_modules", "**/*.test.tsx", "**/*.spec.ts"]
}
